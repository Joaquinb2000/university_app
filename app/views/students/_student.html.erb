<div class="card cyan darken-3">
  <div class="card-content white-text">
      <% if show_page %>
          <i class="material-icons">person_outline</i>
      <% end %>
      <span class="card-title">
          <p><strong><%= student.name %></strong></p>
          <p><%= student.email %></p>
      </span>
      <p> Course Enrollments: <%= student.courses.count %> </p>

      <div class="card-action">
        <% if show_page %>
          <ul class="collection black-text">
            <% @courses.each do |course|%>
              <li class="collection-item left-align">
                <div class="row">
                  <div class="col s6">
                    <%=  course.short_name %>
                  </div>
                  <div class="col s6 right-align">
                    <%= link_to "Leave Course", courses_student_path(id: student.id, course_id: course.id), data: { "turbo": "true", "turbo-method": :delete },  class:"waves-effect waves-light btn red darken-1" %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
            <%= link_to "View profile", student_path(student) %>
        <% end %>
      </div>
  </div>
</div>
